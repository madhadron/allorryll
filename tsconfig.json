{
    "compilerOptions": {
      "alwaysStrict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "strictNullChecks": true,
      "target": "ES6",
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "module": "commonjs",
      "outDir": "build/"
    },
    "include": [
        "src/**/*.ts"
    ]
}
